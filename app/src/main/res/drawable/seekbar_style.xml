<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
                <corners android:radius="5dip" />
                <!-- angle 是角度 -->
                <gradient
                    android:angle="270"
                    android:centerColor="#545454"
                    android:centerY="0.75"
                    android:endColor="#545454"
                    android:startColor="#545454" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="oval">
                <corners android:radius="8dp" />
                <gradient
                    android:startColor="#80364956"
                    android:centerColor="#802f67a6"
                    android:centerY="0.75"
                    android:endColor="#8000112e"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape >
                <corners android:radius="4dp" />
                <gradient
                    android:startColor="#50E018"
                    android:centerColor="#50E018"
                    android:centerY="0.75"
                    android:endColor="#50E018"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>
