<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_rights"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_right"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@color/smssdk_bg_gray"
        android:visibility="gone"
        android:text="好吃的"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_marginLeft="3dp"
        android:layout_weight="3"
        android:padding="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tx_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东北大米"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tx_right_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="月售120份"
            android:layout_below="@+id/tx_right_name"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tx_right_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"/>

          <ImageView
              android:id="@+id/img_add"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@mipmap/ic_add_circle_blue_700_36dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
